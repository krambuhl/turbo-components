<html-wrapper page-name="Search">
  <header>{attribs.pageName}</header>
  
  <if data=attribs.display-mode eq="grid">
    <product-grid addClass="search-results" products=attribs.results /> 
  <else />
    <product-list addClass="search-results" products=attribs.results />
  </if>
  
  <footer>&copy; Copyright {date 'YYYY'}</footer>
</html-wrapper>