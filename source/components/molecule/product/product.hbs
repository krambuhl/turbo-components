	    <div class="product__label">includes:</div>
	    {{{children}}}
	{{/component}}
	
	{{#if attribs.href}}
		{{#component "atom/button" href=attribs.href}}{{attribs.cost}} / month{{/component}}
	{{/if}}
{{/component}}