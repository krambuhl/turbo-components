{{#component "atom/card" addClass=(joinSpace "product rhythm" attribs.addClass)}}
	{{#component "atom/heading--h2"}}
		{{{attribs.title}}}
	{{/component}}
	{{#if attribs.features}}
		{{#component "atom/list" type="unordered"}}
			{{#each attribs.features}}
				{{#component "atom/list__item"}}{{.}}{{/component}}
			{{/each}}
		{{/component}}
	{{/if}}
	{{#component "atom/button" href=attribs.url}}
		Learn More
	{{/component}}
{{/component}}