{{#component "atom/card" addClass=(joinClass "product rhythm" attribs.addClass)}}
	{{#component "atom/heading"}}
		{{title}}
	{{/component}}
	{{#component "atom/list" type="unordered"}}
		{{#each features}}
			{{#component "atom/list-item"}}{{.}}{{/component}}
		{{/each}}
	{{/component}}
	{{#component "atom/button" href=url}}
		{{btn-text}}
	{{/component}}
{{/component}}
