{{#component "atom/card" addClass=(joinClass 'product rhythm' attribs.addClass)}}
	{{#component "atom/heading"}}{{title}}{{/component}}
	{{#component "atom/list" type="unordered"}}
		{{#each features as |feature|}}
			{{#component "atom/list-item"}}{{feature}}{{/component}}
		{{/each}}
	{{/list}}
	{{#component "atom/button" href=url}}{{btn-text}}{{/component}}
{{/card}}